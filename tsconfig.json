{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // replace the two removed options with this
    "verbatimModuleSyntax": true,
    "ignoreDeprecations": "5.0"
  },
  "include": ["src/**/*"]
}
